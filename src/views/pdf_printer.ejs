<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your QR Cards</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        page-break-after: always;
    }
    .page {
        width: 210mm;
        height: 297mm;
        padding: 5mm;
        box-sizing: border-box;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between; /* Ensures even distribution across the page */
        align-content: space-around;
    }
    .row {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }
    .card-container {
        width: 60mm;
        height: 60mm;
        margin: 2mm;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border: 1px dotted #ccc;
        box-sizing: border-box;
    }
    .front, .back {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }
    .front {
        background-image: url('<%= process.env['API_URI'] %>/public/images/card_background.png');
        background-size: cover;
    }
    .qr {
        width: 60%;
        height: auto;
    }
    .text {
        text-align: center;
        padding: 2mm;
    }
    .text.artist {
        font-size: 18px;
    }
    .text.year {
        font-size: 40px;
        font-weight: bold;
    }
    .text.name {
        font-size: 16px;
        font-style: italic;
    }
    .test {
        background-color: #fff;
        font-size: 12px;
        padding: 3px;
    }
    .invisible {
        visibility: hidden;
    }
</style>
</head>
<body>
<% for (let i = 0; i < tracks.length; i += 12) { %>
    <div class="page">
        <% for (let row = 0; row < 4; row++) { %>
            <div class="row">
                <% for (let col = 0; col < 3; col++) { %>
                    <div class="card-container">
                        <% let index = i + row * 3 + col; %>
                        <% if (index < tracks.length) { %>
                            <div class="front">
                                <div class="test"><%= tracks[index].name %></div>
                                <img src="<%= process.env['API_URI'] %>/public/qr/<%= user.userId %>/<%= tracks[index].trackId %>.png" alt="QR Code" class="qr">
                            </div>
                        <% } else { %>
                            <div class="front invisible"></div> <!-- Invisible placeholder -->
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
    <div class="page">
        <% for (let row = 0; row < 4; row++) { %>
            <div class="row">
                <% for (let col = 2; col >= 0; col--) { %>
                    <div class="card-container">
                        <% let index = i + row * 3 + col; %>
                        <% if (index < tracks.length) { %>
                            <div class="back">
                                <div class="text artist"><%= tracks[index].artist %></div>
                                <div class="text year"><%= tracks[index].year %></div>
                                <div class="text name"><%= tracks[index].name %></div>
                            </div>
                        <% } else { %>
                            <div class="back invisible"></div> <!-- Invisible placeholder -->
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>
<% } %>
</body>
</html>
