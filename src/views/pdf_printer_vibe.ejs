<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your QR Cards</title>
<%- include('partials/font-import-inline') %>
<style>
    body {
        font-family: <%= php.selectedFont || 'Arial, sans-serif' %>;
        margin: 0;
        padding: 0;
    }
    .card-front, .card-back {
        width: 60mm;
        height: 60mm;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }
    .card-front {
        <% if (php.background && php.background.length) { %>
        background-image: url('<%= process.env['API_URI'] %>/public/background/<%= php.background %>');
        <% } else { %>
        background-image: url('<%= process.env['API_URI'] %>/assets/images/background_new.png');
        <% } %>
        background-size: cover;
    }
    .white-square {
        position: absolute;
        width: 36.3mm;
        height: 36.3mm;
        background-color: #fff;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .card-back {
        background-color: #ffffff; /* or any other color you prefer */
    }
    .qr {
        width: 60%;
        height: auto;
        position: relative;
        z-index: 3;
    }
    .text {
        text-align: center;
        padding-top: 2mm;
        padding-bottom: 2mm;
    }
    .text.artist {
        margin-left: 3mm;
        margin-right: 3mm;
        font-size: 18px;
        overflow-wrap: break-word; /* Prevent breaking mid-word */
    }
    .text.year {
        font-size: 40px;
        font-weight: bold;
    }
    .text.name {
        margin-left: 3mm;
        margin-right: 3mm;
        font-size: 16px;
        overflow-wrap: break-word; /* Prevent breaking mid-word */
    }
    .url, .url-bottom {
        font-family: Arial, sans-serif !important;
        font-size: 11px;
        position: absolute;
        bottom: 13mm;
        text-align: center;
        width: 100%;
        color: #b0b0b0;
        z-index: 3;
    }
    .logo {
        position: absolute;
        top: 5mm;
        max-width: 20mm;
        max-height: 10mm;
        z-index: 4;
    }
    .url-bottom {
        bottom: 5mm;
    }
</style>
</head>
<body>
<% tracks.forEach((track, index) => { %>
    <div class="card-front">
        <% if (php.logo && php.logo.length) { %>
            <img class="logo" src="<%= process.env['API_URI'] %>/public/logo/<%= php.logo %>" alt="Logo" style="<%= eco ? 'filter: grayscale(100%);' : '' %>">
        <% } %>
        <% if (!php.hideCircle) { %>
            <div class="white-square">
                <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= track.trackId %>.png" alt="QR Code" style="width: 32mm; height: 32mm;">
            </div>
        <% } else { %>
            <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= track.trackId %>.png" alt="QR Code" class="qr">
        <% } %>
        <div class="url">
            <% if (!php.hideDomain) { %>
                <%= process.env['APP_DOMAIN'] %>
            <% } %>
        </div>
    </div>
    <div style="page-break-after: always;"></div>
    <div class="card-back" style="position: relative;">
        <div class="text artist" style="font-size:<%= php.selectedFontSize || '18px' %>;">
            <%= track.artist %>
            <% if (track.extraArtistAttribute && track.extraArtistAttribute.length > 0) { %>
                <div style="font-family: Arial, sans-serif; font-size: 10px; color: #666; margin-top: 1mm;"><%= track.extraArtistAttribute %></div>
            <% } %>
        </div>
        <div class="text year" style="font-size:<%= php.selectedFont && php.selectedFont.includes('Bebas') ? '50px' : php.selectedFont && php.selectedFont.includes('Pacifico') ? '40px' : php.selectedFont && php.selectedFont.includes('Oswald') ? '46px' : php.selectedFont && php.selectedFont.includes('Playfair') ? '44px' : php.selectedFont && php.selectedFont.includes('Dancing') ? '42px' : php.selectedFont && php.selectedFont.includes('Fredoka') ? '44px' : php.selectedFont && php.selectedFont.includes('Caveat') ? '48px' : php.selectedFont && php.selectedFont.includes('Righteous') ? '46px' : php.selectedFont && php.selectedFont.includes('Alfa') ? '42px' : '48px' %>; font-weight:bold;"><%= track.year %></div>
        <div class="text name" style="font-size:<%= php.selectedFontSize || '16px' %>;">
            <%= track.name %>
            <% if (track.extraNameAttribute && track.extraNameAttribute.length > 0) { %>
                <div style="font-family: Arial, sans-serif; font-size: 10px; color: #666; margin-top: 1mm;"><%- track.extraNameAttribute %></div>
            <% } %>
        </div>
        <div class="url-bottom">
            <% if (!playlist.hideDomain && !php.hideDomain) { %>
                 <% if (php.emoji && php.emoji.length) { %>
                    <span style="<%= eco ? 'filter: grayscale(100%);' : '' %> font-size: 16px;"><%= php.emoji %></span>
                <% } %>
                <%= process.env['APP_DOMAIN'] %>
                <% if (php.emoji && php.emoji.length) { %>
                    <span style="<%= eco ? 'filter: grayscale(100%);' : '' %> font-size: 16px;"><%= php.emoji %></span>
                <% } %>
            <% } %>
        </div>
        <% if (!payment.vibe) { %>
            <div style="position: absolute; bottom: 3mm; right: 3mm; font-size: 10px; color: #909090; font-family: Arial, sans-serif;">#<%= php.paymentHasPlaylistId %></div>
        <% } %>
    </div>
    <div style="page-break-after: always;"></div>
<% }); %>
</body>
</html>
