<!-- Front Page Partial - Shared between Reseller and Retail PDFs -->

<style>
    .front-page-wrapper {
        width: 210mm;
        height: 297mm;
        padding: 8mm;
        box-sizing: border-box;
        background: white;
    }

    .front-page {
        width: 100%;
        height: 100%;
        padding: 0;
        box-sizing: border-box;
        background: linear-gradient(135deg, <%= gradientStart %> 0%, <%= gradientEnd %> 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        border-radius: 4mm;
    }

    .front-page::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 80%;
        height: 200%;
        background: rgba(255, 255, 255, 0.03);
        transform: rotate(-15deg);
        border-radius: 50%;
    }

    .front-page::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -10%;
        width: 60%;
        height: 150%;
        background: rgba(255, 255, 255, 0.02);
        transform: rotate(25deg);
        border-radius: 50%;
    }

    .front-content {
        position: relative;
        z-index: 1;
        text-align: center;
        color: white;
    }

    .front-logos {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
        margin-bottom: 40px;
    }

    .front-logo {
        height: 50px;
        width: auto;
        filter: brightness(0) invert(1);
    }

    .front-logo-qrsong {
        height: 55px;
    }

    .front-logo-onzevibe {
        height: 45px;
    }

    .logo-divider {
        width: 1px;
        height: 40px;
        background: rgba(255, 255, 255, 0.3);
    }

    .front-title {
        font-size: 36px;
        font-weight: 700;
        letter-spacing: -1px;
        margin-bottom: 15px;
        text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
    }

    .front-subtitle {
        font-size: 18px;
        font-weight: 400;
        opacity: 0.9;
        margin-bottom: 30px;
    }

    .front-tagline {
        font-size: 16px;
        opacity: 0.8;
        font-style: italic;
        margin-bottom: 60px;
    }

    .front-footer {
        position: absolute;
        bottom: 25px;
        left: 0;
        right: 0;
        text-align: center;
        z-index: 1;
    }

    .front-date {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 8px;
    }

    .front-website {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 500;
    }

    .front-version {
        font-size: 10px;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 5px;
    }

    .decorative-circles {
        position: absolute;
        top: 20px;
        right: 20px;
        z-index: 1;
    }

    .decorative-circles span {
        display: inline-block;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-left: 8px;
        opacity: 0.5;
    }

    .decorative-circles span:nth-child(1) { background: #fff; opacity: 0.3; }
    .decorative-circles span:nth-child(2) { background: #fff; opacity: 0.5; }
    .decorative-circles span:nth-child(3) { background: #fff; opacity: 0.7; }
</style>

<div class="front-page-wrapper">
    <div class="front-page">
        <div class="decorative-circles">
            <span></span><span></span><span></span>
        </div>

        <div class="front-content">
            <div class="front-logos">
                <img src="<%= baseUrl %>/assets/images/logo_white.png" alt="QRSong!" class="front-logo front-logo-qrsong" />
            </div>

            <div class="front-title"><%= title %></div>
            <div class="front-subtitle"><%= subtitle %></div>
            <div class="front-tagline">Het muzikale cadeau dat Ã©cht van jullie is.</div>
        </div>

        <div class="front-footer">
            <div class="front-date"><%= formatDate(new Date()) %></div>
            <div class="front-website">www.qrsong.io</div>
            <div class="front-version">Versie <%= version %></div>
        </div>
    </div>
</div>
