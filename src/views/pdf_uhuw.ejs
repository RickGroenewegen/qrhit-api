<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your QR Cards</title>
<%- include('partials/font-import-inline') %>
<style>
    body {
        font-family: <%= php.selectedFont || 'Arial, sans-serif' %>;
        margin: 0;
        padding: 0;
    }
    .card-front, .card-back {
        width: 60mm;
        height: 60mm;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }
    .card-front {
        overflow: hidden;
    }
    .card-front::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        <% if (php.backgroundFrontType !== 'solid') { %>
            <% if (php.background && php.background.length) { %>
            background-image: url('<%= process.env['API_URI'] %>/public/background/<%= php.background %>');
            <% } else { %>
            background-image: url('<%= process.env['API_URI'] %>/assets/images/background_new.png');
            <% } %>
            background-size: cover;
            background-position: center;
        <% } %>
        opacity: <%= (php.frontOpacity !== undefined ? php.frontOpacity : 100) / 100 %>;
        z-index: 0;
    }
    /* White square styling removed - now using SVG */
    .card-back {
        position: relative;
        overflow: hidden;
        <% if (php.backgroundBackType === 'solid') { %>
            <% if (php.useGradient) {
                const firstStop = Math.max(0, php.gradientPosition - 50);
                const secondStop = Math.min(100, php.gradientPosition + 50);
                const bgColor = php.backgroundBackColor || '#ffffff';
                const gradColor = php.gradientBackgroundColor || '#ffffff';
                const degrees = php.gradientDegrees || 180;
            %>
            background: linear-gradient(<%= degrees %>deg, <%= bgColor %> <%= firstStop %>%, <%= gradColor %> <%= secondStop %>%);
            <% } else if (php.backgroundBackColor) { %>
            background-color: <%= php.backgroundBackColor %>;
            <% } else { %>
            background-color: #ffffff;
            <% } %>
        <% } else { %>
        background-color: transparent;
        <% } %>
    }
    .background-image-back {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
        opacity: <%= (php.backOpacity !== undefined ? php.backOpacity : 50) / 100 %>;
    }
    .qr {
        width: 60%;
        height: auto;
        position: relative;
        z-index: 3;
    }
    .text {
        text-align: center;
        padding-top: 2mm;
        padding-bottom: 2mm;
    }
    .text.artist {
        font-size: 12px;
        overflow-wrap: break-word;
        word-wrap: break-word;
    }
    .text.year {
        font-size: 28px;
        font-weight: 500;
    }
    .text.name {
        font-size: 12px;
        overflow-wrap: break-word;
        word-wrap: break-word;
    }
    .url, .url-bottom {
        font-size: 11px;
        position: absolute;
        bottom: 13mm;
        text-align: center;
        width: 100%;
        color: #b0b0b0;
        z-index: 3;
    }
    .logo {
        position: absolute;
        top: 4mm;
        left: 50%;
        transform: translateX(-50%);
        max-height: 2rem;
        z-index: 4;
    }
    .url-bottom {
        bottom: 5mm;
    }
</style>
</head>
<body>
<% tracks.forEach((track, index) => { %>
    <div class="card-front" style="<%= !eco && php.backgroundFrontType === 'solid' ? (php.useFrontGradient ? 'background: linear-gradient(' + (php.gradientFrontDegrees || 180) + 'deg, ' + (php.backgroundFrontColor || '#ffffff') + ' ' + Math.max(0, (php.gradientFrontPosition || 50) - 50) + '%, ' + (php.gradientFrontColor || '#ffffff') + ' ' + Math.min(100, (php.gradientFrontPosition || 50) + 50) + '%);' : 'background: ' + (php.backgroundFrontColor || '#ffffff') + ';') : '' %>">
        <% if (php.logo && php.logo.length) { %>
            <img class="logo" src="<%= process.env['API_URI'] %>/public/logo/<%= php.logo %>" alt="Logo" style="<%= eco ? 'filter: grayscale(100%);' : '' %>">
        <% } %>
        <%
        // Determine QR background type - handle backward compatibility
        let qrBgType = php.qrBackgroundType || (php.hideCircle ? 'none' : 'square');
        let qrBgColor = php.qrBackgroundColor || '#ffffff';
        %>
        <% if (qrBgType === 'square') { %>
            <!-- Square background for QR code using SVG -->
            <svg style="position: absolute; width: 36.3mm; height: 36.3mm; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 1;" xmlns="http://www.w3.org/2000/svg">
                <rect x="0" y="0" width="100%" height="100%" fill="<%= qrBgColor %>" />
            </svg>
            <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= track.trackId %>.png" alt="QR Code" style="position: absolute; width: 32mm; height: 32mm; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 2;">
        <% } else if (qrBgType === 'circle') { %>
            <!-- Circle background for QR code using SVG -->
            <svg style="position: absolute; width: 48mm; height: 48mm; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 1;" xmlns="http://www.w3.org/2000/svg">
                <circle cx="50%" cy="50%" r="24mm" fill="<%= qrBgColor %>" />
            </svg>
            <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= track.trackId %>.png" alt="QR Code" style="position: absolute; width: 36mm; height: 36mm; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 2;">
        <% } else { %>
            <!-- No background shape -->
            <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= track.trackId %>.png" alt="QR Code" class="qr">
        <% } %>
        <!-- Domain URL removed - always hidden -->
    </div>
    <div style="page-break-after: always;"></div>
    <div class="card-back" style="position: relative;">
        <% if (php.backgroundBackType !== 'solid' && php.backgroundBack && php.backgroundBack.length) { %>
            <img class="background-image-back" src="<%= process.env['API_URI'] %>/public/background/<%= php.backgroundBack %>" alt="Card Background">
        <% } %>
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100%; width: 100%; position: relative; z-index: 1;">
            <div class="text artist" style="padding: 0 13mm;color:<%= php.fontColor || '#000000' %>;">
                <%= track.artist %>
                <% if (track.extraArtistAttribute && track.extraArtistAttribute.length > 0) { %>
                    <div style="font-family: Arial, sans-serif; font-size: 10px; color: <%= php.fontColor || '#666' %>; margin-top: 1mm;"><%= track.extraArtistAttribute %></div>
                <% } %>
            </div>
            <div class="text year" style="margin-top: 3mm;font-size:<%= php.selectedFont && php.selectedFont.includes('Bebas') ? '38px' : php.selectedFont && php.selectedFont.includes('Pacifico') ? '28px' : php.selectedFont && php.selectedFont.includes('Oswald') ? '34px' : php.selectedFont && php.selectedFont.includes('Playfair') ? '32px' : php.selectedFont && php.selectedFont.includes('Dancing') ? '30px' : php.selectedFont && php.selectedFont.includes('Fredoka') ? '32px' : php.selectedFont && php.selectedFont.includes('Caveat') ? '36px' : php.selectedFont && php.selectedFont.includes('Righteous') ? '34px' : php.selectedFont && php.selectedFont.includes('Alfa') ? '30px' : php.selectedFont && php.selectedFont.includes('Ubuntu') ? '36px' : '36px' %>;font-weight:500;padding: 0 13mm;color:<%= php.fontColor || '#000000' %>;"><%= track.year %></div>
            <div class="text name" style="margin-top: 3mm;padding: 0 13mm;color:<%= php.fontColor || '#000000' %>;">
                <%= track.name %>
                <% if (track.extraNameAttribute && track.extraNameAttribute.length > 0) { %>
                    <div style="font-family: Arial, sans-serif; font-size: 10px; color: <%= php.fontColor || '#666' %>; margin-top: 1mm;"><%- track.extraNameAttribute %></div>
                <% } %>
            </div>
        </div>
        <!-- Domain URL removed from back side - always hidden -->
        <!-- Batch number removed -->
    </div>
    <div style="page-break-after: always;"></div>
<% }); %>
</body>
</html>
