<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your QR Cards</title>
<style>
    @media print {
        @page {
            size: A4;
            margin: 0;
        }
        body {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }
        img {
            image-rendering: -webkit-optimize-contrast;
            image-rendering: crisp-edges;
        }
    }
   
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    .page {
        width: 210mm;
        height: 297mm;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 15mm 0;
        page-break-after: always;
        margin: 0 auto;
    }
    .row {
        width: 180mm; /* 3 cards Ã— 60mm */
        display: flex;
        justify-content: center;
        gap: 0mm;
        margin-bottom: 0;
        margin: 0 auto;
    }
    .card {
        width: 60mm;
        height: 60mm;
        margin: 0;
    }
    .card.front {
        border: 1px dotted #e8e8e8;
    }
    .card {
        width: 60mm;
        height: 60mm;
        box-sizing: border-box;
    }
    .front {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        position: relative;
        overflow: hidden;
    }
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }
   
    .circle {
        position: absolute;
        width: 48mm;
        height: 48mm;
        background-color: #fff;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
        border: 1px solid #e0e0e0;
    }
    .domain {
        font-size: 13px;
        color: #909090; /* Match the color used on the back */
        position: absolute;
        bottom: 10mm;
        width: 100%;
        text-align: center;
        z-index: 2;
    }
    .logo {
        position: absolute;
        top: 5mm;
        left: 50%;
        transform: translateX(-50%);
        max-width: 20mm;
        max-height: 10mm;
        z-index: 3;
    }
    .qr {
        flex: 0 0 80%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        position: relative;
        z-index: 2;
    }
    .qr img {
        width: 36mm;
        height: 36mm;
        object-fit: contain;
        image-resolution: 300dpi;
    }
    .back {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        height: 60mm;
    }
    .text {
        font-size: 12px;
        margin-top: 2mm;
        padding: 0 2mm;
        max-width: 56mm;
        margin-left: 3mm;
        margin-right: 3mm;
    }
    .text.artist {
        font-size: 18px;
    }
    .text.year {
        font-size: 36px;
        font-weight: bold;
    }
    .text.name {
        font-size: 16px;
        font-style: italic;
    }
</style>
</head>
<body>
<% 
let cardsPerPage = 12;
let totalPages = Math.ceil(tracks.length / cardsPerPage);

for(let pageNum = 0; pageNum < totalPages; pageNum++) { 
    let startIdx = pageNum * cardsPerPage;
    let endIdx = Math.min(startIdx + cardsPerPage, tracks.length);
%>
    <!-- Front side page <%= pageNum + 1 %> -->
    <div class="page">
        <% for(let rowStart = startIdx; rowStart < endIdx; rowStart += 3) { %>
            <div class="row">
                <% 
                // Get indices for this row and pad to 3 cards if needed
                let rowIndices = [];
                for(let i = rowStart; i < rowStart + 3; i++) {
                    if (i < endIdx) {
                        rowIndices.push(i);
                    } else {
                        rowIndices.push(null); // Padding for incomplete row
                    }
                }
                
                // Render the cards in this row
                rowIndices.forEach(function(i) { %>
                    <% if (i !== null) { %>
                        <div class="card front">
                            <% if (!eco) { %>
                                <% if (php.background && php.background.length) { %>
                                    <img class="background-image" src="<%= process.env['API_URI'] %>/public/background/<%= php.background %>" alt="Card Background">
                                    <div class="circle"></div>
                                <% } else { %>
                                    <img class="background-image" src="<%= process.env['API_URI'] %>/assets/images/card_background2.png" alt="Card Background">
                                    <div class="circle"></div>
                                <% } %>
                            <% } %>
                            <% if (php.logo && php.logo.length) { %>
                                <img class="logo" src="<%= process.env['API_URI'] %>/public/logo/<%= php.logo %>" alt="Logo">
                            <% } %>
                            <div class="qr">
                                <img src="<%= process.env['API_URI'] %>/public/qr/<%= subdir %>/<%= tracks[i].trackId %>.png" alt="QR Code" style="width: 60%; height: auto;">
                            </div>
                            <div class="domain">                              
                                <%= process.env['APP_DOMAIN'] %>                                
                            </div>
                        </div>
                    <% } else { %>
                        <div class="card front"></div>
                    <% } %>
                <% }); %>
            </div>
        <% } %>
    </div>
 
    <!-- Back side page <%= pageNum + 1 %> -->
    <div class="page">
        <% 
        // Create arrays for each row (3 cards per row)
        for(let rowStart = startIdx; rowStart < endIdx; rowStart += 3) { %>
            <div class="row">
            <% 
            // Get indices for this row and pad to 3 cards if needed
            let rowIndices = [];
            for(let i = rowStart; i < rowStart + 3; i++) {
                if (i < endIdx) {
                    rowIndices.push(i);
                } else {
                    rowIndices.push(null); // Padding for incomplete row
                }
            }
            // Reverse the row indices
            rowIndices.reverse();
            
            // Render the cards in this row
            rowIndices.forEach(function(i) { %>
                <% if (i !== null) { %>
                    <div class="card back" style="position: relative;">
                        <% if (php.logo && php.logo.length) { %>
                            <img style="position: absolute; top: 5mm; left: 50%; transform: translateX(-50%); max-width: 20mm; max-height: 10mm; z-index: 10;" src="<%= process.env['API_URI'] %>/public/logo/<%= php.logo %>" alt="Logo">
                        <% } %>
                        <div class="text" style="margin-top: 0mm;font-size:18px;padding-left:2mm;padding-right:2mm;">
                            <%= tracks[i].artist %>
                            <% if (tracks[i].extraArtistAttribute && tracks[i].extraArtistAttribute.length > 0) { %>
                                <div style="font-size: 14px; color: #666; margin-top: 2mm;"><%= tracks[i].extraArtistAttribute %></div>
                            <% } %>
                        </div>
                        <div class="text" style="margin-top: 5mm;font-size:36px;font-weight:bold;padding-left:2mm;padding-right:2mm;"><%= tracks[i].year %></div>
                        <div class="text" style="margin-top: 7mm;font-size:16px;font-style: italic;padding-left:2mm;padding-right:2mm;">
                            <%= tracks[i].name %>
                            <% if (tracks[i].extraNameAttribute && tracks[i].extraNameAttribute.length > 0) { %>
                                <div style="font-size: 12px; color: #666; margin-top: 2mm;"><%= tracks[i].extraNameAttribute %></div>
                            <% } %>
                        </div>
                        <div class="text" style="margin-top: 5mm;font-size:14px;color:#909090;">
                            <% if (php.emoji && php.emoji.length) { %>
                                <span style="grayscale(100%);"><%= php.emoji %></span>
                            <% } %>
                            <%= process.env['APP_DOMAIN'] %>
                            <% if (php.emoji && php.emoji.length) { %>
                                <span style="grayscale(100%);"><%= php.emoji %></span>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <div class="card back"></div>
                <% } %>
            <% }); %>
            </div>
        <% } %>
    </div>
<% } %>
</body>
</html>
