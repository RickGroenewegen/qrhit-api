<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#0077be">
    <link rel="manifest" href="/assets/manifest.json">
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <link rel="apple-touch-icon" href="/assets/images/icon-192x192.png">
    <title>QRSong!</title>
    <script src="https://cdn.jsdelivr.net/npm/jsqr@1.3.1/dist/jsQR.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/countdown.css?v=<%= version %>">
</head>
<body>
    <div id="onboarding-overlay" style="display: block; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 1000; background-color: rgba(0, 0, 0, 0.9);">
        <div class="onboarding-content">
            <div class="title">
                <img src="/assets/images/logo_white.png" alt="QRSong! Logo" class="logo-image"/>
            </div>
            <h2 class="onboarding-heading"><%= translations.youNeedToInstall %></h2>
            <div class="device-selector">
                <button id="ios-selector" class="device-button active"><i class="fab fa-apple"></i> iOS</button>
                <button id="android-selector" class="device-button"><i class="fab fa-android"></i> Android</button>
            </div>
            <div id="ios-instructions" class="install-instructions active" ">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <p><%= translations.tapShare %></p>
                        <div class="animation-container">
                            <i class="fas fa-share-square animated-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <p><%= translations.scrollDown %></p>
                        <div class="animation-container">
                            <i class="fas fa-arrow-down animated-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <p><%= translations.tapAddToHomeScreen %></p>
                        <div class="animation-container">
                            <i class="fas fa-plus-square animated-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div id="android-instructions" class="install-instructions">
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <p><%= translations.tapMenu %></p>
                        <div class="animation-container">
                            <i class="fas fa-ellipsis-v animated-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <p><%= translations.tapAddToHomeScreen %></p>
                        <div class="animation-container">
                            <i class="fas fa-plus-square animated-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <video id="qr-video"></video>
    <canvas id="qr-canvas"></canvas>
    <button id="close-scanner" onclick="stopScanning()">X <%= translations.closeScanner %></button>

    <script>
        // Pass EJS variables to JavaScript
        window.countdownInitialValue = <%= process.env['COUNTDOWN'] %>;
        window.environment = '<%= process.env['ENVIRONMENT'] %>';
        window.apiUri = '<%= process.env['API_URI'] %>';
        window.translations = {};
        <% for (let key in translations) { %>window.translations['<%= key %>'] = '<%= translations[key].replace(/'/g, "\\'") %>';
        <% } %>
    </script>
    <script src="/assets/js/countdown.js?v=<%= version %>"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const onboardingOverlay = document.getElementById('onboarding-overlay');
            if (localStorage.getItem('hasSeenOnboarding') === 'true' || isPWAInstalled()) {
                onboardingOverlay.style.display = 'none';
            }
        });
    </script>
</body>
</html>
