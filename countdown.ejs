<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Install Our PWA</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 20px;
            background-color: #f0f0f0;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        h1 {
            color: #4a4a4a;
            text-align: center;
        }
        .platform {
            margin-bottom: 30px;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s, transform 0.5s;
        }
        .platform.show {
            opacity: 1;
            transform: translateY(0);
        }
        .platform h2 {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
        }
        .step {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        .step-number {
            background-color: #3498db;
            color: #fff;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 15px;
            flex-shrink: 0;
        }
        .icon {
            font-size: 24px;
            margin-right: 10px;
        }
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        .cta {
            text-align: center;
            margin-top: 30px;
            animation: pulse 2s infinite;
        }
        .cta p {
            font-weight: bold;
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Install Our PWA for the Best Experience!</h1>
        
        <div class="platform" id="ios">
            <h2>üì± For iOS Users</h2>
            <div class="step">
                <div class="step-number">1</div>
                <p>Open this page in Safari</p>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <p>Tap the share icon <span class="icon">‚¨ÜÔ∏è</span> at the bottom of the screen</p>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <p>Scroll down and tap "Add to Home Screen" <span class="icon">üè†</span></p>
            </div>
            <div class="step">
                <div class="step-number">4</div>
                <p>Tap "Add" in the top right corner</p>
            </div>
        </div>

        <div class="platform" id="android">
            <h2>ü§ñ For Android Users</h2>
            <div class="step">
                <div class="step-number">1</div>
                <p>Open this page in Chrome</p>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <p>Tap the menu icon <span class="icon">‚ãÆ</span> in the top right</p>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <p>Tap "Add to Home screen" <span class="icon">‚ûï</span></p>
            </div>
            <div class="step">
                <div class="step-number">4</div>
                <p>Tap "Add" when prompted</p>
            </div>
        </div>

        <div class="cta">
            <p>Install now for offline access and a native app-like experience!</p>
        </div>
    </div>

    <script>
        function showPlatforms() {
            const platforms = document.querySelectorAll('.platform');
            platforms.forEach((platform, index) => {
                setTimeout(() => {
                    platform.classList.add('show');
                }, index * 300);
            });
        }

        // Detect platform and show relevant instructions
        window.addEventListener('load', () => {
            const ua = navigator.userAgent.toLowerCase();
            const isIOS = /iphone|ipad|ipod/.test(ua);
            const isAndroid = /android/.test(ua);

            if (isIOS) {
                document.getElementById('android').style.display = 'none';
            } else if (isAndroid) {
                document.getElementById('ios').style.display = 'none';
            }

            showPlatforms();
        });
    </script>
</body>
</html>
